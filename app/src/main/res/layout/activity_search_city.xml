<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchCityActivity"
    android:background="@drawable/gradient">

    <RelativeLayout
        android:id="@+id/display"
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <ImageView
            android:id="@+id/cityArt"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cloud"/>

        <TextView
            android:id="@+id/cityCondition"
            android:layout_above="@+id/cityArt"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cloudy"
            android:textSize="25sp"
            android:textColor="#FFF" />

        <TextView
            android:id="@+id/city"
            android:layout_below="@+id/cityArt"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BUCHAREST"
            android:textSize="20sp"
            android:textColor="#FFF"/>

        <TextView
            android:id="@+id/currCityTemp"
            android:layout_below="@+id/city"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="30Â°C"
            android:textSize="18sp"
            android:textColor="#FFF"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/low_img"
        android:layout_below="@+id/display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/low"
        android:layout_marginLeft="40dp"/>

    <TextView
        android:id="@+id/lowTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/display"
        android:layout_marginStart="15dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/low_img"
        android:text="32 C"
        android:textColor="#FFF"
        android:textSize="30sp" />


    <ImageView
        android:id="@+id/hign_img"
        android:layout_below="@+id/display"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/high"
        android:layout_marginRight="40dp"/>

    <TextView
        android:id="@+id/highTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/display"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="15dp"
        android:layout_toStartOf="@+id/hign_img"
        android:text="35 C"
        android:textColor="#FFF"
        android:textSize="30sp" />





</RelativeLayout>